def single_root_words(root_word, *other_words):
    same_words = []
    for word in other_words:
        if root_word in word:
            same_words.append(word)
        elif word in root_word:
            same_words.append(word)

    return same_words

print(single_root_words('Работа', 'Раб', 'Работать', 'Слон', 'Собака', 'Работящий'))
